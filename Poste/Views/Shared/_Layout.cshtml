<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PosteLente</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>


<!-- //////////////////////////////////////////// NAVBAR /////////////////////////////////////////////-->
<body class="bg-primary bg-opacity-25 border border-0">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm  bg-primary bg-opacity-50 text-primary">
        <div class="container">
            @Html.ActionLink("PosteLente", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-primary" })

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Admin", "Login", "Login", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("User", "Index", "UserLogin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Tracking", "Index", "Tracking", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- //////////////////////////////////////////// FOOTER /////////////////////////////////////////////-->
    <div class="container body-content ">
        @RenderBody()

        <footer class="bg-dark mb-1 w-100 justify-content-center rounded fixed-bottom">

            <div class="bg-primary bg-opacity-50 text-light d-flex fex-row justify-content-around pt-3 rounded ">
                <p>&copy; @DateTime.Now.Year - PosteLente</p>
                <p>Contact</p>
                <p>Info</p>
                <p>Privacy</p>
            </div>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>

@model List<Poste.Models.Aggiornamenti>
<div class="d-flex justify-content-end w-100">
    @Html.ActionLink("Logout", "Index", "Home", null, new { @class = "text-decoration-none text-light bg-danger bg-opacity-75 p-2 mx-1 rounded-pill border border-light" })
</div>


<div class="d-flex flex-row justify-content-around">
    @Html.ActionLink("Aggiungi Pacco", "RegisterPackage", "Spedizioni", null, new { @class = "text-decoration-none text-light bg-primary bg-opacity-75 p-2 rounded-pill" })
    @Html.ActionLink("Aggiorna Pacco", "Aggiorna", "Aggiornamenti", null, new { @class = "text-decoration-none text-light bg-primary bg-opacity-75 p-2 rounded-pill" })
    @Html.ActionLink("Aggiungi Cliente", "AddClienti", "Clienti", null, new { @class = "text-decoration-none text-light bg-primary bg-opacity-75 p-2 rounded-pill" })
</div>

<br />
<br />
<br />

<h2>Lista Aggiornamenti:</h2>

<br />

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Status</th>
            <th>Luogo</th>
            <th>Descrizione</th>
            <th>DataEOra</th>
            <th>CodiceTasseCliente</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aggiornamenti in Model)
        {
            <tr>
                <td>@aggiornamenti.SpedizioneID</td>
                <td>@aggiornamenti.Satus</td>
                <td>@aggiornamenti.Luogo</td>
                <td>@aggiornamenti.Descrizione</td>
                <td>@aggiornamenti.DataEOra</td>
                <td>@aggiornamenti.CodiceTasseCliente</td>
            </tr>
        }
    </tbody>
</table>

